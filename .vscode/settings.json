{
  "editor.tabSize": 2,

  "[groovy]": {
      "editor.tabSize": 4
  },

  "terminal.integrated.fontFamily": "Fira Code",
  "terminal.integrated.fontSize": 14,

  "files.trimTrailingWhitespace": true,
  "ruby.lint": {
      "reek": false,
      "rubocop": true,
      "ruby": true, //Runs ruby -wc
      "fasterer": false,
      "debride": false,
      "ruby-lint": true
  },
  // "ruby.rubocop.executePath": "/Users/s.chen/.rbenv/shims/",
  // "ruby.rubocop.configFilePath": "/Users/s.chen/.rubocop.yml",
  // "ruby.rubocop.onSave": true,
  "editor.wordWrap": "on",
  "editor.tabCompletion": true,
  "editor.fontFamily": "Fira Code",
  "editor.fontSize": 13,
  "editor.fontLigatures": true,
  "workbench.iconTheme": "vs-seti",
  "window.zoomLevel": 0,

  "files.exclude": {
    "vendor": true,
    "**/.classpath": true,
    "**/.project": true,
    "**/.settings": true,
    "**/.factorypath": true
  },
  "workbench.startupEditor": "newUntitledFile",
  "editor.minimap.enabled": false,
  "solargraph.withSnippets": true,
  "workbench.panel.location": "bottom",
  "explorer.confirmDragAndDrop": false,
  "gitlens.advanced.messages": {
    "suppressLineUncommittedWarning": true,
    "suppressResultsExplorerNotice": true,
    "suppressShowKeyBindingsNotice": true,
    "suppressUpdateNotice": true
  },
  "gitlens.keymap": "chorded",
  "gitlens.historyExplorer.enabled": true,
  "terminal.integrated.rendererType": "dom",
  "git.ignoreLimitWarning": true,
  "git.autofetch": true,
  "breadcrumbs.enabled": true,
  "editor.renderWhitespace": "none",
  "gitlens.views.fileHistory.enabled": true,
  "gitlens.views.lineHistory.enabled": true,
  "leetcode.endpoint": "leetcode",
  "leetcode.defaultLanguage": "ruby",
  "editor.suggestSelection": "first",
  "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
  "json.format.enable": false,
  "java.format.enabled": false,
  "java.format.comments.enabled": false,
  "java.format.onType.enabled": false,
  "javascript.format.enable": false,

  // rest-client
  "rest-client": {
    "defaultHeaders": {
      "Content-Type": "application/json",
      "Authorization": "12345"
    },
    "environmentVariables": {
      "$shared": {
      },
      "local": {
        // "host": "http://api-local.treasuredata.com:3000",
        "host": "http://127.0.0.1:3000",
        "token": "TD1 1/84dc9ef11d018254845d514652aaea78995cb3f9"
      },
    }
  },

  // log viewer
  "logViewer.watch": [
    {
      "title": "TestLog",
      "pattern": "/Users/chen.s/Projects/td-api/log/test.log"
    }
  ],
  "java.semanticHighlighting.enabled": true,
  "python.languageServer": "Pylance",
  "mssql.connections": [
    {
      "server": "{{put-server-name-here}}",
      "database": "{{put-database-name-here}}",
      "user": "{{put-username-here}}",
      "password": "{{put-password-here}}"
    }
  ],
  "workbench.editorAssociations": {
    "*.ipynb": "jupyter-notebook"
  },
  "redhat.telemetry.enabled": true,
  "security.workspace.trust.untrustedFiles": "open"
}
